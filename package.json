{
  "name": "@coherent.js/monorepo",
  "version": "1.0.0-beta.3",
  "private": true,
  "description": "A lightweight, high-performance server-side rendering framework using pure JavaScript objects. Features include streaming renderer, performance monitoring, component composition, memoization, and integrations with Express.js, Fastify, and Next.js.",
  "type": "module",
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "vitest run",
    "test:vitest": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:packages": "pnpm -r run test",
    "test:coverage": "vitest run --coverage",
    "coverage:report": "node scripts/generate-coverage-report.js",
    "build": "pnpm run build:packages",
    "build:packages": "pnpm -r --stream run build",
    "build:types": "tsc --build",
    "publish:beta": "pnpm publish -r --access public --tag beta --no-git-checks",
    "publish:latest": "pnpm publish -r --access public --no-git-checks",
    "release": "pnpm changeset version && pnpm publish -r --access public --no-git-checks",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "dev": "pnpm run build && pnpm run website:dev",
    "clean": "pnpm -r run clean && rm -rf dist/",
    "demo": "node examples/master-showcase.js",
    "example:basic": "node examples/basic-usage.js",
    "example:components": "node examples/components-test.js",
    "example:performance": "node examples/performance-test.js",
    "example:advanced": "node examples/advanced-features.js",
    "example:streaming": "node examples/streaming-renderer.js",
    "example:security": "node examples/security-test.js",
    "example:hydration": "node examples/hydration-test.js",
    "example:memoization": "node examples/memoization-test.js",
    "example:composition": "node examples/component-composition.js",
    "lint": "eslint packages/*/src/ packages/*/test/ examples/ scripts/ --max-warnings=0",
    "lint:fix": "eslint packages/*/src/ packages/*/test/ examples/ scripts/ --fix",
    "format": "prettier --write packages/ tests/ examples/",
    "format:check": "prettier --check packages/ tests/ examples/",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --noEmit --strict",
    "typecheck:packages": "pnpm -r run typecheck",
    "website:build": "pnpm --filter @coherent.js/client run build && node scripts/build-website.js",
    "website:serve": "node scripts/serve-website.js",
    "website:start": "pnpm run website:build && node scripts/serve-website.js",
    "website:dev": "node scripts/dev-website.js",
    "version": "pnpm changeset version",
    "prepare": "husky",
    "prepack": "pnpm run build",
    "security:audit": "pnpm audit --audit-level moderate",
    "security:update": "pnpm update --latest",
    "security:check": "pnpm outdated",
    "perf:analyze": "node scripts/analyze-bundle.mjs",
    "perf:build": "NODE_ENV=production pnpm build",
    "perf:benchmark": "node benchmarks/benchmark.js",
    "test:node": "pnpm -r run test:node"
  },
  "keywords": [
    "ssr",
    "server-side-rendering",
    "html",
    "javascript",
    "objects",
    "express",
    "fastify",
    "nextjs",
    "framework",
    "performance",
    "streaming",
    "components",
    "hydration"
  ],
  "author": "Thomas Drouvin <thomas.drouvin@collektivs.com> (https://coherentjs.dev)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tomdrouv1/coherent.js.git"
  },
  "bugs": {
    "url": "https://github.com/Tomdrouv1/coherent.js/issues"
  },
  "homepage": "https://github.com/Tomdrouv1/coherent.js#readme",
  "peerDependencies": {
    "express": ">=4.18.0 < 6.0.0",
    "fastify": ">=4.0.0 < 6.0.0",
    "koa": ">=2.13.0 < 4.0.0",
    "mongodb": ">=5.0.0 < 7.0.0",
    "mysql2": ">=3.0.0 < 4.0.0",
    "next": ">=13.0.0 < 16.0.0",
    "pg": ">=8.8.0 < 9.0.0",
    "react": ">=18.0.0 < 20.0.0",
    "sqlite3": ">=5.1.0 < 6.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "koa": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "sqlite3": {
      "optional": true
    },
    "mysql2": {
      "optional": true
    },
    "pg": {
      "optional": true
    },
    "mongodb": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@eslint-community/eslint-utils": "4.9.0",
    "@eslint-community/regexpp": "4.12.2",
    "@eslint/config-array": "0.23.0",
    "@eslint/config-helpers": "0.5.0",
    "@eslint/core": "1.0.0",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "4.0.13",
    "chokidar": "4.0.3",
    "concurrently": "9.2.1",
    "esbuild": "0.27.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "marked": "^16.4.2",
    "next": "16.0.3",
    "prettier": "^3.6.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "typescript": "5.9.3",
    "vitest": "4.0.12",
    "ws": "8.18.3"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react"
      ]
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "sharp"
    ],
    "overrides": {
      "glob@<8": ">=10.0.0",
      "rimraf@<4": ">=5.0.0",
      "inflight": "npm:@humanfs/inflight@^1.0.0",
      "npmlog": "npm:proc-log@^5.0.0",
      "are-we-there-yet": "npm:proc-log@^5.0.0",
      "gauge": "npm:proc-log@^5.0.0",
      "tar-fs": ">=2.1.4",
      "tmp": ">=0.2.4",
      "esbuild": ">=0.25.9"
    }
  }
}
