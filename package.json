{
  "name": "@coherentjs/core",
  "version": "0.2.5",
  "description": "A lightweight, high-performance server-side rendering framework using pure JavaScript objects. Features include streaming renderer, performance monitoring, component composition, memoization, and integrations with Express.js, Fastify, and Next.js.",
  "main": "src/coherent.js",
  "type": "module",
  "bin": {
    "coherent-dev": "scripts/dev-server.js"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "test": "node --test tests/*.test.js",
    "dev": "coherent-dev",
    "dev:server": "nodemon",
    "dev:watch": "node --watch --watch-path=src/dev scripts/dev-server.js",
    "example:basic": "node examples/basic-usage.js",
    "example:components": "node examples/components-test.js",
    "example:performance": "node examples/performance-test.js",
    "example:advanced": "node examples/advanced-features.js",
    "example:streaming": "node examples/streaming-renderer.js",
    "example:security": "node examples/security-test.js",
    "example:hydration": "node examples/hydration-test.js",
    "example:memoization": "node examples/memoization-test.js",
    "example:composition": "node examples/component-composition.js",
    "lint": "eslint src/ --max-warnings=0",
    "format": "prettier --write src/ tests/ examples/",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --noEmit --strict",
    "build": "tsc && node scripts/build.js",
    "website:build": "node scripts/build-website.js",
    "website:serve": "node scripts/serve-website.js",
    "website:start": "pnpm run website:build && node scripts/serve-website.js",
    "website:dev": "node scripts/dev-website.js",
    "prepare": "husky"
  },
  "keywords": [
    "ssr",
    "server-side-rendering",
    "html",
    "javascript",
    "objects",
    "express",
    "fastify",
    "nextjs",
    "framework",
    "performance",
    "streaming",
    "components",
    "hydration"
  ],
  "author": "Thomas Drouvin <thomas.drouvin@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tomdrouv1/coherent.js.git"
  },
  "bugs": {
    "url": "https://github.com/Tomdrouv1/coherent.js/issues"
  },
  "homepage": "https://github.com/Tomdrouv1/coherent.js#readme",
  "peerDependencies": {
    "express": "^4.0.0 || ^5.0.0",
    "fastify": "^4.0.0 || ^5.0.0",
    "koa": "^2.0.0 || ^3.0.0",
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "sqlite3": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "koa": {
      "optional": true
    },
    "fastify": {
      "optional": true
    },
    "next": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "sqlite3": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint-community/eslint-utils": "4.7.0",
    "@eslint-community/regexpp": "4.12.1",
    "@eslint/config-array": "0.21.0",
    "@eslint/config-helpers": "0.3.1",
    "@eslint/core": "0.15.2",
    "@types/node": "^24.1.0",
    "chokidar": "4.0.3",
    "esbuild": "0.25.8",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "next": "15.4.5",
    "prettier": "^3.6.2",
    "marked": "^12.0.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "typescript": "^5.9.2",
    "ws": "8.18.3"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./src/coherent.js",
      "require": "./src/coherent.js"
    },
    "./express": {
      "import": "./src/express/index.js"
    },
    "./koa": {
      "import": "./src/koa/index.js"
    },
    "./nextjs": {
      "import": "./src/nextjs/index.js"
    },
    "./api": {
      "import": "./src/api/index.js"
    },
    "./fastify": {
      "import": "./src/fastify/coherent-fastify.js"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/react"
      ]
    }
  }
}
