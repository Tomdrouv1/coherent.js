{
  "name": "@coherentjs/cli",
  "version": "1.0.0",
  "description": "Command-line interface for Coherent.js projects",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "./types/index.d.ts",
  "bin": {
    "coherent": "./bin/coherent.js",
    "coherentjs": "./bin/coherent.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./templates": "./templates/"
  },
  "scripts": {
    "build": "node build.mjs",
    "clean": "rm -rf dist/",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "test:coverage": "vitest run --coverage",
    "test:vitest": "vitest run",
    "test:node": "node --test test/*.test.js"
  },
  "files": [
    "types/",
    "dist/",
    "bin/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "glob": "11.0.3",
    "inquirer": "^10.2.2",
    "ora": "^8.1.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2"
  },
  "peerDependencies": {
    "@coherentjs/core": "^1.0.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tomdrouv1/coherent.js.git"
  },
  "publishConfig": {
    "access": "public"
  }
}
