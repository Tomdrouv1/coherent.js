{
  "name": "@coherent.js/build-tools",
  "version": "1.0.0-beta.1",
  "description": "Build tools and bundler integrations for Coherent.js (Vite, Webpack, Rollup)",
  "type": "module",
  "main": "src/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": "./src/index.js",
    "./vite": "./src/vite.js",
    "./webpack": "./src/webpack.js",
    "./rollup": "./src/rollup.js",
    "./loader": "./src/coherent-loader.js"
  },
  "files": [
    "src/",
    "types/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node build.mjs",
    "test": "vitest"
  },
  "keywords": [
    "build",
    "bundler",
    "vite",
    "webpack",
    "rollup",
    "coherent",
    "ssr"
  ],
  "author": "Coherent.js Team",
  "license": "MIT",
  "dependencies": {
    "@coherent.js/core": "workspace:*"
  },
  "devDependencies": {
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "vite": "^5.0.0",
    "webpack": "^5.0.0",
    "rollup": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    },
    "webpack": {
      "optional": true
    },
    "rollup": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tomdrouv1/coherent.js.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
