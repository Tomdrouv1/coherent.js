{
  "name": "@coherent.js/core",
  "version": "1.0.0-beta.5",
  "description": "Core runtime for Coherent.js (SSR framework).",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "development": "./src/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./components": {
      "development": "./src/components/index.js",
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.cjs"
    },
    "./rendering": {
      "development": "./src/rendering/index.js",
      "import": "./dist/rendering/index.js",
      "require": "./dist/rendering/index.cjs"
    },
    "./performance": {
      "development": "./src/performance/index.js",
      "import": "./dist/performance/index.js",
      "require": "./dist/performance/index.cjs"
    },
    "./utils": {
      "development": "./src/utils/index.js",
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.cjs"
    }
  },
  "scripts": {
    "build": "node build.mjs",
    "clean": "rm -rf dist/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "test:vitest": "vitest run",
    "test:node": "node --test test/*.test.js"
  },
  "files": [
    "dist/",
    "types/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tomdrouv1/coherent.js.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "sideEffects": false
}
