{
  "name": "@coherent.js/client",
  "version": "1.0.0-beta.2",
  "description": "Client-side hydration/HMR utilities for Coherent.js",
  "type": "module",
  "main": "src/hydration.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "development": "./src/hydration.js",
      "import": "./dist/index.js"
    },
    "./router": "./src/router.js",
    "./hmr": "./src/hmr.js"
  },
  "types": "./types/index.d.ts",
  "scripts": {
    "build": "node build.mjs",
    "clean": "rm -rf dist/",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "test:coverage": "vitest run --coverage",
    "test:vitest": "vitest run",
    "test:node": "node --test test/*.test.js"
  },
  "files": [
    "types/",
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tomdrouv1/coherent.js.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
